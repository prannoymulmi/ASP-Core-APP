@model RegisterUserViewModel

@{

}
<div class="ui raised very padded text container" style="margin-right:5%;">
    <h3 class="ui header centered">APP Register FORM</h3>
    <form asp-controller="RegisterUser" asp-action="Index" class="ui large form validate-me" role="form">

        <div class="ui stack segment">
            <div class="field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input asp-for="Username" placeholder="Username" />
                    <span  style="color:red;" ></span>
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="Password"  placeholder="Password" />
                    <span  style="color:red;"></span>
                </div>
            </div>
            
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="ConfirmPassword"  placeholder="Password" />
                    <span  style="color:red;"></span>
                </div>
            </div>

            <div>
               
                <button class="ui blue button">
                    <i class="lock icon"></i>
                    Register
                </button>
            </div>
           

            <div  asp-validation-summary="All" class="ui error" style="color:red;"></div>
            
        </div>
    </form>
</div>

